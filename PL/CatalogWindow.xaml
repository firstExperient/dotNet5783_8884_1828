<Window x:Class="PL.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO ="clr-namespace:BO;assembly=BL"
        mc:Ignorable="d"
        Title="CatalogWindow" Height="450" Width="600"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <DataTemplate  DataType="{x:Type BO:ProductItem}">
            <StackPanel Orientation="Horizontal" >
                <TextBlock Text="{Binding Name}"></TextBlock>
                <TextBlock Text="{Binding Price}"></TextBlock>
                <TextBlock Text="{Binding Amount}"></TextBlock>
                <TextBlock Text="{Binding InStock}"></TextBlock>
                <Button Content="Add To Cart" Click="AddToCart"/>
                <Button Content="Show Details" Click="ShowProductItem"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListView  ItemsSource="{Binding ProductsList}"  Grid.ColumnSpan="2">
            <!--<ListView.View>
                <GridView>
                   
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding ID}"></GridViewColumn>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}"></GridViewColumn>
                    <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}"></GridViewColumn>
                    <GridViewColumn Header="amount of items" DisplayMemberBinding="{Binding Amount}"></GridViewColumn>
                    <GridViewColumn Header="In Stock" DisplayMemberBinding="{Binding InStock}"></GridViewColumn>
                </GridView>
            </ListView.View>-->
        </ListView>
        <Button Content="Show cart" HorizontalAlignment="Left" Margin="472,370,0,0" VerticalAlignment="Top" Height="32" Width="95" Click="ShowCart_click"/>
    </Grid>
</Window>
