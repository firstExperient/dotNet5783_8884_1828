<Window x:Class="PL.SuccessOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="SuccessOrderWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <StackPanel>
            <TextBlock Margin="0,0,0,0" Text="Your order has been successfully placed. Your order ID: "/>
            <TextBlock Margin="0,0,0,0" Text="{Binding OrderId}"/>
            <TextBlock Margin="0,0,0,0" Text="You can follow the status of the order on the order tracking page"/>
            <Button HorizontalAlignment="Left" Content="Return to main page" Click="ShowMain"/>
        </StackPanel>
    </Grid>
</Window>
