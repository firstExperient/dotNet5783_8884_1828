<Window x:Class="PL.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO ="clr-namespace:BO;assembly=BL"
        mc:Ignorable="d"
        Title="CatalogWindow" Height="450" Width="600"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <DataTemplate  DataType="{x:Type BO:ProductItem}">
            <StackPanel Orientation="Horizontal" >
                <TextBlock Text="Name: "></TextBlock>
                <TextBlock Text="{Binding Name}"></TextBlock>
                <TextBlock Margin="15,00,0,0" Text="Price: "></TextBlock>
                <TextBlock Text="{Binding Price}"></TextBlock>
               <!-- <TextBlock Text="{Binding Amount}"></TextBlock> -->
                <TextBlock Margin="15,00,0,0" Text="In Stock: "></TextBlock>
                <TextBlock Text="{Binding InStock}"></TextBlock>

                <Button Margin="60,20,0,0" Content="Add To Cart" Click="AddToCart" Height="25" Width="75"/>
                <Button Margin="60,20,0,0" Content="Show Details" Click="ShowProductItem" Height="25" Width="75"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListView  ItemsSource="{Binding ProductsList}"  Grid.ColumnSpan="2">
        </ListView>
        <Button Content="Show cart" HorizontalAlignment="Left" Click="ShowCart" Margin="472,370,0,0" VerticalAlignment="Top" Height="32" Width="95"/>
    </Grid>
</Window>
